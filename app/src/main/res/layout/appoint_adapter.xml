<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">


    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_gradient_maths"
            android:minHeight="100dp"
            android:padding="10dp">

            <TextView

                android:drawableLeft="@drawable/calendars"
                android:drawablePadding="10dp"
                android:id="@+id/date"


                style="@style/viewParent.headerText.HomeCardTitle"

                android:fontFamily="@font/berkshire_swash"
                 />

            <TextView

                android:drawableLeft="@drawable/medical"
                android:drawablePadding="10dp"
                android:id="@+id/fullname"
                style="@style/viewParent.headerText.homeCardContent"
                android:textSize="17dp"
                android:layout_below="@id/date"
                 />

            <TextView
                android:drawablePadding="10dp"

             android:drawableLeft="@drawable/hour"
                android:textSize="17dp"
                android:id="@+id/hour"
                style="@style/viewParent.headerText.homeCardContent1"
                android:layout_below="@id/fullname"
             />

            <ImageView
                style="@style/homeCardImage"
                android:maxHeight="90dp"
                android:src="@drawable/date" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="133dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/buttonstyle"
                android:text="cancel" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
