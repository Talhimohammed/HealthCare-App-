<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="411dp"
        android:layout_height="329dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="429dp"
                android:layout_height="57dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/date"
                    android:layout_width="286dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/image_16"
                    android:fontFamily="@font/days_one"
                    android:gravity="center"

                    android:text="15/78/2009"
                    android:textSize="30dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:fontFamily="@font/racing_sans_one"
                android:gravity="center"
                android:text="Talhi mohammed"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/email"
                    android:layout_width="377dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Talhimohammed@gmail.com" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hour"
                    android:layout_width="357dp"
                    android:layout_height="65dp"
                    android:layout_marginRight="20dp"
                    android:drawableLeft="@drawable/image_17"
                    android:fontFamily="serif"
                    android:gravity="center"

                    android:text="15:50"
                    android:textSize="20dp" />


            </LinearLayout>

            <Button
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:textSize="20dp"
                android:background="@color/red"
                android:textColor="@color/whiteTextColor"
                android:text="CANCEL" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

