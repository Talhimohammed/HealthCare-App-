<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwithe"
    tools:context=".signup">

    <Button
        android:id="@+id/patient"
        android:layout_width="156dp"
        android:layout_height="149dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginBottom="277dp"
        android:background="@drawable/rectangle_8"
        android:text="PATIENT"
        android:textColor="@color/colorwithe"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/doctor" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="89dp"
        android:layout_marginRight="89dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"

        app:srcCompat="@drawable/logo1" />

  <LinearLayout
      android:id="@+id/infolayout"
      android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    android:gravity="right"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <ImageView

        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_gravity="left"
        android:paddingLeft="20dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/logo1"
        android:layout_marginBottom="10dp"/>
    <ScrollView
        android:layout_gravity="center"
        android:layout_width="390dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/btn_bg"
            android:orientation="vertical"
            android:paddingRight="12dp">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/kanit_regular"
                android:text="Full name"
                android:textColor="#BC3F4658"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/nameinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                />


            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/kanit_regular"
                android:text="Birthday Day"
                android:textColor="#BC3F4658"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/birthdayinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
               />


            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/kanit_regular"
                android:text="Phone"
                android:textColor="#BC3F4658"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/phoneinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                 />

            <TextView
                android:id="@+id/specialit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/kanit_regular"
                android:text="Spécialité"
                android:textColor="#BC3F4658"
                android:textSize="18dp" />

            <Spinner
                android:entries="@array/specialite"
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/kanit_regular"
                android:text="Email"
                android:textColor="#BC3F4658"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/emailinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
             />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/kanit_regular"
                android:text="Password"
                android:textColor="#BC3F4658"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/passwordinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/kanit_regular"
                android:text="Confirm Password"
                android:textColor="#BC3F4658"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/editText10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
             />
            <TextView
                android:id="@+id/ville1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/kanit_regular"
                android:text="Doctor Address"
                android:textColor="#BC3F4658"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/phonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                 />


            <Button
                android:id="@+id/send"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/bgbutton"
                android:text="Create"
                android:textColor="#ffff"
                android:textSize="16dp"
                android:layout_marginBottom="10dp"/>




        </LinearLayout>
    </ScrollView>

</LinearLayout>

    <Button
        android:id="@+id/doctor"
        android:layout_width="156dp"
        android:layout_height="149dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="277dp"
        android:background="@drawable/rectangle_8"
        android:text="DOCTOR"
        android:textColor="@color/colorwithe"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/patient"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/areyou"
        android:layout_width="267dp"
        android:layout_height="86dp"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="I'm a"
        android:textSize="50dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ProgressBar
        android:id="@+id/pbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="181dp"
        android:layout_marginLeft="181dp"
        android:layout_marginEnd="182dp"
        android:layout_marginRight="182dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>